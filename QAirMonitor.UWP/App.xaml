<common:BootStrapper x:Class="QAirMonitor.UWP.App"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:common="using:Template10.Common"
                     xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters">
    <common:BootStrapper.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        
        <Thickness x:Key="PageHeaderContentMargin">12,0</Thickness>
        <Thickness x:Key="PageHeaderNavigationMenuMainButtonMargin">-12,0,0,0</Thickness>

        <Style x:Key="PageHeaderTextBlockStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="17" />
            <Setter Property="FontWeight"
                    Value="Bold" />
        </Style>
    </common:BootStrapper.Resources>
</common:BootStrapper>
